mixin input(options)
  if !options
    - options = {}
  if (options.type ==='text' || options.type ==='email')
    input.input.input_default(
      type = options.type, 
      placeholder = options.placeholder,
      name = options.name
      )
  if (options.type === 'checkbox' || options.type === 'radio')
    label(class=`input__label-${options.mode}`)
      .input__text  #{options.label}
      input(class=`input__${options.mode}`
        type = options.type,
        name = options.name,
        checked = options.checked
      )
      if (options.mode === 'checkbox' || options.type === 'radio')
        span