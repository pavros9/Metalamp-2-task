mixin form-item(options)
  if !options
    - options = {}
  label.form-items__item.form-item
    .form-item__top 
      h3.form-item__title #{options.title}
      if options.modifier
        span.form-item__modifier #{options.modifier}
      if options.isRangeSlider
        .form-item__modifier.numbers-range
          span.first-number
          |  - 
          span.second-number
    block