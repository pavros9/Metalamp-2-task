extends ../base/base

include ../../common-blocks/layout/layout
include ../../common-blocks/form-items/form-items
include ../../common-blocks/form-item/form-item
include ../../common-blocks/button/button
include ../../common-blocks/input/input
include ../../common-blocks/dropdown/dropdown
include ../../common-blocks/range-slider/range-slider


block title
  | Forms Elements

block variables

block content
  +layout
    +form-items
      +form-item({title: "Text field", modifier: "Default"})
        +input({type: 'email', placeholder: 'Email'})
      +form-item({title: "Text field", modifier: "Hover / focus"})
        +input({type: 'text', placeholder: 'This is pretty awesome'})
      +form-item({title: "Toggle"})
        +input({type: 'checkbox', mode: 'toggle', label: 'Получать спецпредложение', checked: 'checked'})
        +input({type: 'checkbox', mode: 'toggle', label: 'Получать спецпредложение'})
      +form-item({title: "Dropdown"})
        +dropdown
      +form-item({title: "Masked Text field"})
        +input({class: 'input-mask', inputmask: "'alias': 'datetime'", type: 'text', placeholder: 'ДД.ММ.ГГГГ'})
        +input({class: 'input-mask', inputmask: "'alias': 'datetime'", type: 'text', placeholder: 'ДД.ММ.ГГГГ'})

      +form-item({title: "Checkbox buttons"})
        +input({type: 'checkbox', mode: 'checkbox', label: 'Можно курить'})
        +input({type: 'checkbox', mode: 'checkbox', label: 'Можно с питомцами'})
        +input({type: 'checkbox', mode: 'checkbox', label: 'Можно пригласить гостей (до 10 человек)'})

      +form-item({title: "Radio buttons"})
        +input({type: 'radio', mode: 'radio', name: 'gender', checked: 'checked', label: 'Мужчина'})
        +input({type: 'radio', mode: 'radio', name: 'gender', label: 'Женщина'})
      
      +form-item({title: "Subscription text field"})
        +input({class: 'input__email_with-button',type: 'email', placeholder: 'Email', button: 'true'})
      +form-item({title: "Like button"})
        //- +button({mode: 'button', class: 'button__like', text: '2'})
        //- +button({mode: 'button', class: 'button__like button__like_active', text: '12'})
      +form-item({title: "Rate Buttons"})
        +input({mode: 'rating'})
      +form-item({title: "Buttons"})
        +button({size: 'middle', theme: 'solid',text: "Click me"})
        +button({size: 'middle', theme: 'solid', tag: "a"})
        +button({size: 'middle', theme: 'transparent', text: "Click me"})
        +button({size: 'big', theme: 'transparent', tag: "a"})
        +button({size: 'big', theme: 'solid', text: "Подключить"})
        +button({size: "small", text: "12"})
      +form-item({title: "Range slider"})
        +range-slider()
      
      
      